# top-most EditorConfig file
root = true

# Configuración para todos los archivos
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Configuración específica para archivos TypeScript y JavaScript
[*.{js,ts}]
quote_type = single
